<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Custom theme according the material design -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PreferenceScreen" parent="AppTheme">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:listDivider">@drawable/line_divider</item>
    </style>

    <!-- This is the style for the headers-->
    <style name="HeaderTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/height_header</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/standard_text_size</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="checkbox_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_size</item>
        <item name="android:paddingLeft">@dimen/small_padding</item>
        <item name="android:paddingRight">@dimen/small_padding</item>
        <item name="android:textSize">@dimen/standard_text_size</item>
    </style>

    <style name="custom_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_size</item>
        <item name="android:layout_marginRight">@dimen/margin_size</item>
        <item name="android:layout_weight">1</item>
<!--        adding a custom background and text color-->
        <item name="android:background">@drawable/round_button</item>
        <item name="android:textColor">@color/text_button</item>
    </style>

    <style name="quantity_buttons">
        <item name="android:layout_width">@dimen/height_buttons</item>
        <item name="android:layout_height">@dimen/height_buttons</item>
        <!--        adding a custom background-->
        <item name="android:background">@drawable/round_button</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
